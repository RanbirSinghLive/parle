# Parle Environment Variables
# Copy this file to .env.local and fill in your API keys

# Supabase (required for auth)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# STT - Deepgram (leave empty to use mock transcription)
DEEPGRAM_API_KEY=

# TTS - ElevenLabs (leave empty to use browser TTS)
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=
# Optional: Model ID (default: eleven_multilingual_v2)
# Options: eleven_multilingual_v2 (better quality), eleven_turbo_v2_5 (faster)
# Some custom voices only work with specific models - use /api/tts/diagnose to check
ELEVENLABS_MODEL_ID=

# LLM - Claude (leave empty to use mock responses)
ANTHROPIC_API_KEY=
